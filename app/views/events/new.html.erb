<%= form_for @event, html: { multipart: true }  do |f| %>
  <div class="form-group">
    <%= f.label :poster %>
    <%= f.file_field :poster %>
  </div>
  <div class="form-group">
    <%= f.label :place %>
    <%= f.text_field :place, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :showtime %>
    <%= f.date_field :showtime, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :size %>
    <%= f.number_field :size, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :rental_fee %>
    <%= f.number_field :rental_fee, required: true %>
  </div>
  <%= f.submit "Create Evevnt", class: "btn btn-primary" %>
  <%= link_to "Cancel", :back, class: "btn btn-warning" %>
<% end %>
